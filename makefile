	@echo alias sudo=\'echo NO!!!!! you will use please\' >> ~/.bashrc
	@echo alias sudo=\'echo NO!!!!! you will use please\' >> ~/.zshrc
	@echo alias please=\'~/.please/main.py\' >> ~/.bashrc
	@echo alias please=\'~/.please/main.py\' >> ~/.zshrc
